        crossorigin="anonymous"></script>
	<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/styleEditarUsuario.css">
</head>

<body>
    <nav class="navbar fixed-top navbar-fixed-top navbar-dark navbar-expand-lg colorNav">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="/images/logo-amarillo.svg" alt="" width="150" height="30"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav   ms-auto" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Envios</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mi Cuenta
                        </a>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="/editarDatosUsuario">Mis Datos</a></li>
                          <li><a class="dropdown-item" href="/metodosPago">Métodos de Pago</a></li>
                        </ul>
                      </li>
                    <li class="nav-item ">
                        <a class="nav-link active" aria-current="page" href="#">|</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Bienvenido Usuario</a>
                    </li>
                    <li class="nav-item " class="Botones">
                        <button type="submit" onclick="location.href='/cerrarsesion'"
                            class="btn btn-outline-light  fw-semibold">Cerrar Sesión</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="mb-3"></div>
        <div class="card" style="position: relative;
        top: 80px;
        border-color: rgb(33, 46, 70);">
            <div class="card-body">
                <center><svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                  </svg></center>
                <h2 class="card-title text-center">Datos Personales</h2>
                <form action="/editarDatosUsuario" method="POST" class="needs-validation credit-card-div" novalidate>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row formMetodo">
                                <div class="col-md-5">
                                    <label class="fw-bold">Nombre</label>
                                    <input type="name" name="nombre" class="form-control" placeholder="Nombre(s)" value="<%=user.nombres%>" >

                                </div>
                                <div class="col-md-5">
                                    <label class="fw-bold">Apellido Materno</label>
                                    <input type="name" name="apellidoM" class="form-control" placeholder="Apellido Materno" value="<%=user.apellidoMaterno%>" />
                                </div>
                            </div>
                            <br>
                            <div class="row formMetodo">
                                <div class="col-md-5">
                                    <label class="fw-bold">Apellido Paterno</label>
                                    <input type="name" name="apellidoP" class="form-control" placeholder="Apellido Paterno" value="<%=user.apellidoPaterno%>" />
                                </div>
                                <div class="col-md-5">
                                    <label class="fw-bold">Número de telefono</label>
                                    <input type="tel" name="telefono" class="form-control" placeholder="Número" value="<%=user.numeroCelular%>" />
                                </div>
                            </div>
                            <br>
                            <div class="row formMetodo">
                                <div class="col-md-5">
                                    <label class="fw-bold">Correo Electrónico</label>
                                    <input type="email" name="correo" class="form-control" placeholder="Correo" value="<%=user.correo%>" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <center><button type="submit"class="btn btn-outline-danger">Editar Datos</button></center>
                </form>
            </div>
        </div>
    </div>
	<script src="js/validation.js"></script>
</body>

</html>